## schedule management - conferences, show timeline

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test conference-timeline-1.0 {conference timeline, no conference} -body {
    run conference timeline -n
} -setup {
    stage-open
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "*cm general: No conference chosen, please \"select\" a conference"

test conference-timeline-1.1 {conference timeline, wrong args, too many} -body {
    run conference timeline X
} -setup {
    stage-open
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "* cmdr: wrong#args, too many*"

# # ## ### ##### ######## ############# #####################

# # ## ### ##### ######## ############# #####################

test conference-timeline-3.0 {conference timeline} -body {
    run conference timeline
} -setup {
    stage-open
    run contact create-person -E me@myself.org Myself me
    run conference -n add C 2015 mon 2015-10-01 5 me me@myself.org ;# auto active
} -cleanup {
    stage-close
} -match glob -result [viewFile support/conference/timeline.txt]

