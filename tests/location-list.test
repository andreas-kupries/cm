## location management - listing

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test location-list-1.0 {location list, wrong args, too many} -body {
    run location list X
} -setup {
    stage-open
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "* cmdr: wrong#args, too many*"

# # ## ### ##### ######## ############# #####################

test location-list-2.0 {location list, defaults, empty} -body {
    run location list
} -setup {
    stage-open
} -cleanup {
    stage-close
} -result [viewFile support/location-list-empty.txt]

test location-list-2.1 {location list, not empty, issues} -body {
    run location list
} -setup {
    stage-open
    run city     new C S N
    run location new N S Z {C, S, N}
} -cleanup {
    stage-close
} -result [viewFile support/location-list.txt]

# # ## ### ##### ######## ############# #####################
cleanupTests
